<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivityFragment">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_fragment_isbn"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="ISBN"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-- OR --"
            android:id="@+id/textView"
            android:layout_below="@+id/main_activity_fragment_isbn"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/main_activity_fragment_isbn"
            android:gravity="center_horizontal"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_fragment_term_spinner"
            android:layout_below="@+id/main_activity_fragment_school_helper_label"
            android:layout_alignParentStart="true"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_fragment_department_spinner"
            android:layout_below="@+id/main_activity_fragment_term_spinner"
            android:layout_alignParentStart="true"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_fragment_course_spinner"
            android:layout_below="@+id/main_activity_fragment_department_spinner"
            android:layout_alignParentStart="true"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_fragment_section_spinner"
            android:layout_below="@+id/main_activity_fragment_course_spinner"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Another Book / Course"
            android:id="@+id/main_activity_fragment_add_another_button"
            android:layout_above="@+id/main_activity_fragment_find_books_button"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/main_activity_fragment_find_books_button"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Books"
            android:id="@+id/main_activity_fragment_find_books_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="School: "
            android:id="@+id/main_activity_fragment_school_helper_label"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/main_activity_fragment_school_label"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/main_activity_fragment_school_helper_label"/>

</RelativeLayout>
